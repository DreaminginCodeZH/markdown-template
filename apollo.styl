@charset "utf-8";
@import "nib"


color-default = #4f5759
color-title = #222
color-border = #ddd
color-link = #33a6b8
color-background = #fff
color-meta = #999
color-footer = #777


font-sans = "WenQuanYi Micro Hei", "Helvetica Neue", Helvetica, "Nimbus Sans L", Arial, "Liberation Sans", "Open Sans", "Hiragino Sans GB", "Source Han Sans CN", "Source Han Sans SC", "Wenquanyi Micro Hei", "WenQuanYi Zen Hei", "Microsoft YaHei", "ST Heiti", SimHei, "WenQuanYi Zen Hei Sharp", sans-serif
font-serif = Georgia, "Nimbus Roman No9 L", "Times New Roman", "Songti SC", STSong, "AR PL New Sung", "AR PL SungtiL GB", NSimSun, SimSun, "TW\-Sung", "WenQuanYi Bitmap Song", "WenQuanYi Zen Hei Sharp", "AR PL UMing CN", "AR PL UMing HK", "AR PL UMing TW", "AR PL UMing TW MBE", serif
font-mono = "WenQuanYi Micro Hei Mono", "Source Code Pro", Consolas, Monaco, Menlo, "WenQuanYi Zen Hei Mono", "WenQuanYi Micro Hei", "WenQuanYi Zen Hei", monospace
font-size = 100%
line-height = 2em


global-reset()


input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0


a
  color: color-link
  text-decoration: none

  &:hover
    color: #2a8998

strong, b
  font-weight: bold

em
  font-style: italic

code
  text-shadow: 0 1px #fff
  padding: 0 0.3em

del
  text-decoration: line-through

sub, sup
  font-size: 75%
  line-height: 0
  position: relative

:root sub, :root sup
  vertical-align: baseline

sup
  top: -0.5em

sub
  bottom: -0.2em

acronym, abbr
  border-bottom: 1px dotted
  font-variant: normal

abbr
  cursor: help

h1, h2, h3, h4, h5, h6
  color: color-title
  font-weight: bold
  a
    color: color-title
    text-decoration: none
    &:hover
      color: color-title

pre, code
  font-family: font-mono
  font-size 1em

pre
  code
    padding: 0

.left, .alignleft
  float: left

.right, .alignright
  float: right


body
  background: color-background
  color: color-default
  font: font-size font-sans
  font-size: 105%
  line-height: line-height
  margin-bottom: 2em
  text-rendering: optimizelegibility
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  word-break: break-word
  p
    margin: 0.5em 0
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: 0.5em auto
  h1, h2, h3, h4, h5, h6
    margin: 1em 0
    line-height: 1.5
  h1
    font-size: 170%
  h2
    font-size: 160%
  h3
    font-size: 140%
  h4
    font-size: 130%
  h5
    font-size: 110%
  h6
    font-size: 100%
  dt
    font-weight: bold
  ul
    list-style: disc !important
  ol
    list-style: decimal !important
  ul, ol, dl
    margin: 0 0 1em 1.5em
    padding: 0
    li ul, li ol
      margin-bottom: 0

  table
    line-height: inherit
    margin: 0.5em 0 1em 0
    width: auto
    border-collapse: collapse
    border-spacing: 0

  thead
    tr
      border-bottom: 3px solid color-border

  tbody
    tr
      border-bottom: 1px solid color-border

  th
    font-weight: bold
  th, td
    padding: 0.25em 1em
    &:first-child
      padding-left: 0
    &:last-child
      padding-right: 0

  blockquote
    margin: 1.5em 3em
    padding: 5px 20px
    border-left: 5px solid #aaa
    color: color-footer
    p:last-child
      margin-bottom: 0
    footer
      font-size: font-size
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em

  .pullquote
    border-left: 0
    text-align: left
    width: 45%
    margin: 10px 0 0 0
    .left
      margin-left: 0.5em
      margin-right: 1em
    .right
      margin-right: 0.5em
      margin-left: 1em

  .callout
    margin: 1.5em 0
    padding: 5px 20px
    border-left: 5px solid color-title
    color: color-default
    .title
      color: color-title
      font-weight: bold

  .caption
    color: color-default
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center

  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

  pre
    padding: 15px
    background: #f5f5f5
    border: 0
    border-bottom-right-radius: 0
    border-bottom-left-radius: 0
    border-top-left-radius: 0
    border-radius: 3px
    background-clip: padding-box
    word-wrap: normal
    overflow-x: auto
    font-size: 100%
    line-height: 1.3

  hr
    width: 20%
    margin: 3em auto
    border: 0
    border-top: 3px solid #d5d5d5

pre
  // Theme: Solarized - Light
  // More theme here: http://softwaremaniacs.org/media/soft/highlight/test.html
  .comment
  .template_comment
  .diff .header
  .doctype
  .pi
  .lisp .string
  .javadoc
    color: #93a1a1
    font-style: italic

  .keyword
  .winutils
  .method
  .addition
  .css .tag
  .request
  .status
  .nginx .title
    color: #859900

  .number
  .command
  .string
  .tag .value
  .phpdoc
  .tex .formula
  .regexp
  .hexcolor
    color: #2aa198

  .title
  .localvars
  .chunk
  .decorator
  .built_in
  .identifier
  .vhdl
  .literal
  .id
    color: #268bd2

  .attribute
  .variable
  .lisp .body
  .smalltalk .number
  .constant
  .class .title
  .parent
  .haskell .type
    color: #b58900

  .preprocessor
  .preprocessor .keyword
  .shebang
  .symbol
  .symbol .string
  .diff .change
  .special
  .attr_selector
  .important
  .subst
  .cdata
  .clojure .title
    color: #cb4b16

  .deletion
    color: #dc322f
